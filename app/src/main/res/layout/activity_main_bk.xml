<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SplashActivity">
    <!--第一部分搜索条 -->
    <RelativeLayout
        android:background="#9E9D42"
        android:layout_width="match_parent"
        android:layout_height="80dp"></RelativeLayout>
    <!--第二部分切换内容 -->
    <FrameLayout
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </FrameLayout>
    <!--第三部分底部选项卡 -->
    <LinearLayout
        android:background="#0191F2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <RadioGroup  android:orientation="horizontal"
            android:layout_width="match_parent"
            android:checkedButton="@+id/rb1"
            android:layout_height="match_parent">
        <RadioButton

            android:button="@null"
            android:gravity="bottom|center_horizontal"
            android:layout_gravity="center_vertical"
            android:textColor="@drawable/selector_main_font"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:id="@+id/rb1"
            android:drawableTop="@drawable/selector_main_r1"
            android:text="选项一"
          />
        <RadioButton
            android:id="@+id/rb2"
            android:text="选项二"
            android:textColor="@drawable/selector_main_font"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button

            android:background="@mipmap/asq"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rb3"
            android:text="选项四"
            android:textColor="@drawable/selector_main_font"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rb4"
            android:text="选项五"
            android:textColor="@drawable/selector_main_font"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>